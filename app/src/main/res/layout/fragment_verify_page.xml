<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Verify Phone"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="130dp"
        android:textStyle="bold"
        android:textSize="22dp"/>

    <TextView
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:text="Code is sent to 8094508485"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">

        <EditText
            android:id="@+id/otpbox1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="number"
            android:maxLength="1"
            android:gravity="center"
            android:textSize="24sp"
            android:background="@drawable/otp_box_shape"
            android:layout_margin="8dp"/>
        <EditText
            android:id="@+id/otpbox2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="number"
            android:maxLength="1"
            android:gravity="center"
            android:textSize="24sp"
            android:background="@drawable/otp_box_shape"
            android:layout_margin="8dp"/>
        <EditText
            android:id="@+id/otpbox3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="number"
            android:maxLength="1"
            android:gravity="center"
            android:textSize="24sp"
            android:background="@drawable/otp_box_shape"
            android:layout_margin="8dp"/>
        <EditText
            android:id="@+id/otpbox4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="number"
            android:maxLength="1"
            android:gravity="center"
            android:textSize="24sp"
            android:background="@drawable/otp_box_shape"
            android:layout_margin="8dp"/>

        <EditText
            android:id="@+id/otpbox5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="number"
            android:maxLength="1"
            android:gravity="center"
            android:textSize="24sp"
            android:background="@drawable/otp_box_shape"
            android:layout_margin="8dp"/>

        <EditText
            android:id="@+id/otpbox6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="number"
            android:maxLength="1"
            android:gravity="center"
            android:textSize="24sp"
            android:background="@drawable/otp_box_shape"
            android:layout_margin="8dp"/>




    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Didn't recive the code ? Request again"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_marginTop="6dp"/>

    <Button
        android:id="@+id/verifycontbtn"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="VERIFY AND CONTINUE"
        android:layout_gravity="center"
        android:background="@drawable/rectangle_shape"
        android:layout_marginTop="23dp"


        />










</LinearLayout>