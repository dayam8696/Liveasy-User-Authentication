<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="130dp"
        android:gravity="center"
        android:text="Please select your profile"
        android:textSize="22dp"
        android:textStyle="bold" />


    <RadioGroup
        android:id="@+id/your_radio_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/shiper"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/enter_num_box_frame"
            android:drawableLeft="@drawable/profile_select"
            android:gravity="center|start"
            android:text="    Shipper\n\n    Lorem ipsum dolor sit amet,\n    consectetur adipiscing">

        </RadioButton>


        <RadioButton
            android:id="@+id/transorter"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/enter_num_box_frame"
            android:drawableLeft="@drawable/truck"
            android:text="    Transporter\n\n    Lorem ipsum dolor sit amet, \n    consectetur adipiscing" />


    </RadioGroup>

</LinearLayout>


